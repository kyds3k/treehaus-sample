{{ 'section-hero.css' | asset_url | stylesheet_tag }}
{{ 'helpers.css' | asset_url | stylesheet_tag }}

<section class="hero">
  <div class="hero__container">
    <img
      src="{{ section.settings.image_desktop | image_url: width: 1440 }}"
      alt="{{ section.settings.heading }}"
      class="hero__image hero__image-desktop hide-mobile"
      width="{{ section.settings.image_desktop.width }}"
      height="{{ section.settings.image_desktop.height }}"
    >
    <img
      src="{{ section.settings.image_mobile | image_url: width: 768 }}"
      alt="{{ section.settings.heading }}"
      class="hero__image hero__image-mobile hide-desktop"
      width="{{ section.settings.image_mobile.width }}"
      height=" {{ section.settings.image_mobile.height }}"
    >
    <div class="hero__content">
      {% if section.settings.eyebrow %}
        <p class="hero__eyebrow">{{ section.settings.eyebrow }}</p>
      {% endif %}
      {% if section.settings.heading %}
        <h2 class="hero__heading">{{ section.settings.heading }}</h2>
      {% endif %}
      <div class="hero__ctas">
        {% for i in (1..4) %}
          {% assign cta_text = 'cta_text_' | append: i %}
          {% assign cta_link = 'cta_link_' | append: i %}
          {% if section.settings[cta_text] and section.settings[cta_link] %}
            <a href="{{ section.settings[cta_link] }}" class="btn btn--primary">
              {{ section.settings[cta_text] }}
            </a>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

