<section class="collection-blocks">
  <div class="collection-blocks__container">
    {% for block in section.blocks %}
      <div class="collection-blocks__item">
        <img
          src="{{ block.settings.block_image | img_url: 'medium' }}"
          alt="{{ block.settings.content_heading }}"
          class="collection-blocks__image"
        >
      </div>
    {% endfor %}
  </div>
</section>

